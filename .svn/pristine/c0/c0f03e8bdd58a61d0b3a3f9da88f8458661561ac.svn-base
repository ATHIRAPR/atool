<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<!-- Meta -->
		{include file="page_meta.tpl.html"}
		<!-- /Meta -->
		<link rel="stylesheet" type="text/css" href="css/default.css" media="screen,print" />
		<title>案内文書管理システム</title>

		<script type="text/javascript" src="js/jquery-1.7.1.min.js"></script>
		<script type="text/javascript" src="js/exvalidation.js"></script>
		<script type="text/javascript" src="js/exchecker-ja.js"></script>

		<link type="text/css" rel="stylesheet" href="css/exvalidation.css" />

		<script language="javascript">
			$(function() {
				$("#change_user_password_form").exValidation({
					errInsertPos : 'after',
					errPosition : 'fixed',
					stepValidation : true,
					customListener : "",

					customAddError : function() {
						alert("入力内容に不備があります");
					},

					customClearError : function() {
						return confirm('パスワードを変更します');
					},

					stepValidation : true
				});
			});
		</script>

	</head>

	<body>

		<div id="skip_link_block">
			<ul>
				<li>
					<a href="#main_content_anc">本文へジャンプします</a>
				</li>

			</ul>
			<p id="pageTop">
				ページの先頭です
			</p>
		</div>

		<div id="contents">

			<!-- Header Area -->
			{include file="page_header.tpl.html"}
			<!-- /Header Area -->

			<!-- Contents Area -->

			<div id="contents_body" class="clearfix">

				<!-- Left Navi Area -->
				{include file="left_menu.tpl.html" role_info=$role_info func_info=$func_info}
				<!-- /Left Navi Area -->

				<!-- Main Contents Area -->
				<div id="main_content_area">

					<div id="skip_main_block">
						<p id="main_content_anc">
							<a name="main_content_anc">本文の始まりです</a>
						</p>
					</div>

					<h2><em>パスワード変更</em></h2>

					{if $success == 1}
					<p class="text">
						パスワードを変更しました。
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
						<br>
					</p>

					{else}
					{if $msg != ""}
					<p>
						<span class="text_red text_wb">{$msg}</span>
						<br>
					</p>

					{/if}
					<p>
						<span class="text_red">(*:必須)</span>
					</p>
					<form name="change_user_password_form" method="post" id="change_user_password_form">
						<div class="task_input_form" style="margin-bottom:200px;">
							<table>
								<tr>
									<td width="200">現在のパスワード<span class="text_red">*</span></td>
									<td>
									<input type="password" name="current_user_password" value="{$current|escape}" id="current_user_password" class="chkrequired chkhankaku" maxlength="50" style="width:200px;">
									</input></td>
								</tr>
								<tr>
									<td>新しいパスワード<span class="text_red">*</span></td>
									<td>
									<input type="password" name="new_user_password" value="{$new|escape}" id="new_user_password" class="chkrequired  chkhankaku chkmin8" maxlength="50" style="width:200px;">
									</input></td>
								</tr>
								<tr>
									<td>新しいパスワード（確認用）<span class="text_red">*</span></td>
									<td>
									<input type="password" name="new_user_password_confirm" value="{$new_confirm|escape}" id="new_user_password_confirm" class="chkretype-new_user_password chkrequired" maxlength="50" style="width:200px;">
									</input></td>
								</tr>
								<tr>
									<td colspan="2" class="pwd_go">
									<input type="image" alt="パスワードを変更する" src="image/btn_changepass.jpg" />
									</td>
								</tr>
							</table>
						</div>
					</form>

					{/if}

					<div id="skip_end_block">
						<p id="pageEnd">
							本文の終わりです。
						</p>
					</div>

					<p class="goto_pagetop">
						<a href="#header"><img src="../image/common/btnPagetop.gif" alt="ページの先頭へ" /></a>
					</p>

				</div>
				<!-- /Main Contents Area -->

			</div>
			<!-- /Contents Area -->

			<!-- Footer Area -->
			{include file="page_footer.tpl.html"}
			<!-- /Footer Area -->

		</div>
	</body>
</html>

