@charset "utf-8";

/*******************************************
Import and Settings
---------------------------------------------
01 Property Resset
02 html5 for IE
03 Class
*******************************************/

/*===========================================
01 Property Resset
===========================================*/
body { 
	margin: 0;
	padding: 0;
	font-family: "ＭＳ Ｐゴシック", "MS PGothic", Meiryo, Osaka, sans-serif;
}

* {
	margin: 0;
	padding: 0;
}

img { border: 0;}

hr {
	display: none;
}

em, address, cite {
	font-style: normal;
}

h1, h2, h3, h4, h5, h6, h7 { font-size: 100%;}
h1, h2, h3, h4, p, ul, ol, li, dl, dt, dd, table, th, td, img, a {
	margin: 0;
	padding: 0;
	line-height: 100%;
	border: none;
	color: #666666;
}

a { color: #069be3;}
a:hover { color: #56c1f5;}

#skip_link_block,
#skip_menu_block,
#skip_main_block,
#skip_end_block { display: none;}

/*===========================================
02 html5 for IE
===========================================*/
article,aside,canvas,details,figcaption,figure,
footer,header,hgroup,menu,nav,section,summary { display:block;}

/*===========================================
03 Class
===========================================*/
/* Clearfix */
.clearfix:after {
	content: url("../../image/common/blank.gif");
	display: block;
	clear: both;
	height: 0;
}
.clearfix { display: inline-block;}
.clearfix { display: block;}

/* Clearsum */
.clearboth {
	clear: both;
}
