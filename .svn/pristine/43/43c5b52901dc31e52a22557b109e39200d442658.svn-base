<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<!-- Meta -->
{include file="page_meta.tpl.html"}
<!-- /Meta -->
<link rel="stylesheet" type="text/css" href="css/default.css" media="screen,print" />
<title>文書ファイル管理ツール</title>

<script src="js/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="js/jquery.tablesorter.js" type="text/javascript"></script>
<!-- <script src="js/jquery.tablesorter.min.js" type="text/javascript"></script>-->
<script src="js/jquery.tablesorter.pager.js" type="text/javascript"></script>
<script type="text/javascript" src="js/sys_import_table_sorter.js"></script>

<script type="text/javascript" src="js/sys_import_func.js"></script>

</head>

<body>

<div id="skip_link_block">
	<ul>
		<li><a href="#main_content_anc">本文へジャンプします</a></li>

	</ul>
	<p id="pageTop">ページの先頭です</p>
</div>

<div id="contents">

<!-- Header Area -->
{include file="page_header.tpl.html"}
<!-- /Header Area -->

<!-- Contents Area -->
<div id="contents_body" class="clearfix">

	<!-- Left Navi Area -->
	{*include file="left_menu.tpl.html" role_info=$role_info func_info=$func_info*}
	<!-- /Left Navi Area -->

	<!-- Main Contents Area -->
	<div id="main_content_area">

		<div id="skip_main_block">
			<p id="main_content_anc"><a name="main_content_anc">本文の始まりです</a></p>
		</div>

		<h2><em>ファイルインポートツール</em></h2>

		<p class="text">
		リスト表示されているファイルのみを対象としたファイルインポート処理を行います
		</p>

		<div class="task_select">
			<form name="form_start_import" method="post">
			<table>
				<tr>
					<td>入力元ディレクトリ：</td>
					<td><input type="text" name="src_dir" value="{$src_dir}" size="80" style="width:560px;"></td>
				</tr>

				<tr>
					<td>出力先ディレクトリ：</td>
					<td><input type="text" name="dst_dir" value="{$dst_dir}" size="80" style="width:560px;"></td>
				</tr>

				<tr>
					<td>公開先ディレクトリ：</td>
					<td><input type="text" name="pub_dir" value="{$pub_dir}" size="80" style="width:560px;"></td>
				</tr>

				<tr>
					<td></td>
					<td>
						<input name="btn_check" type="submit" value="再読み込み"></input>
						<!--
						<input name="btn_import" type="button" value="インポート開始"  onclick="javascript:if(confirm('ファイルのインポートを開始します'))document.form_start_import.start_import.value=1;document.form_start_import.submit();"></input>
						-->
						<input name="btn_import" type="button" value="インポート開始"  onclick="javascript:start_import();"></input>
					</td>
				</tr>

				<input type="hidden" name="do_import" value="0"></input>

			</table>

			</form>

		</div>

		<!-- ページ送り  -->
		{include file='table_pager.tpl.html'}
		<!-- /ページ送り  -->

		<!-- ソート　テーブル -->
		<table id="sys_import_table_sorter" class="tablesorter">
			<thead>
		      <tr>
	   	        <th align="center">id</th>
	   	        <th align="center">文種ID</th>
	   	        <th align="center">押印</th>
		        <th height="23" scope="col">file_nm</th>
		        <th height="23" scope="col">filepath</th>
		        <th width="50" nowrap>入力元</th>
		        <th width="50" nowrap>出力先</th>
		        <th width="50" nowrap>状態</th>
   		        <th width="50" nowrap>公開先</th>
   		        {if $show_result}
   		        <th width="50" nowrap>インポート<br>処理結果</th>
   		        {/if}
		      </tr>
			</thead>

			<tbody>
		      {foreach from=$list item=data}
			    <tr
			    {if $data.delete_flg}bgcolor="#aeaeae"
			    {else if $data.exist_dst === "Not Found"}bgcolor="#ffaeae"
			    {else if 0 < $data.status_flg && $data.exist_pub === "Not Found"}bgcolor="#ffffae"
			    {/if}>
			    <td width="40" align="center">{$data.id}</td>
			    <td>{$data.doctype_id}</td>
			    <td>{if $data.stamp_flg}有{else}無{/if}</td>
			    <td>{if $data.delete_flg}*[DEL] {/if}{$data.file_nm}</td>
			    <td>{$data.filepath}</td>
			    <td>{$data.exist_src}</td>
			    <td>{$data.exist_dst}</td>
   			    <td>{$data.status_flg}</td>
			    <td>{$data.exist_pub}</td>
			    {if $show_result}
   		        <td>{$data.result}</th>
   		        {/if}
			    </tr>
			  {foreachelse}

		      {/foreach}
			</tbody>

		</table>
		<!-- /ソート　テーブル -->


		<div id="skip_end_block">
			<p id="pageEnd">本文の終わりです。</p>
		</div>

		<p class="goto_pagetop"><a href="#header"><img src="../image/common/btnPagetop.gif" alt="ページの先頭へ" /></a></p>

	</div>
	<!-- /Main Contents Area -->

</div>
<!-- /Contents Area -->


<!-- Footer Area -->
{include file="page_footer.tpl.html"}
<!-- /Footer Area -->

</div>
</body>
</html>


