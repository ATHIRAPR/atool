		<h2><em>{if $mng == 1}文書種別の閲覧権限管理{else}閲覧権限確認{/if}</em></h2>
		<form name="edit_doctype_authority_form" method="post" id="edit_doctype_authority_form">

		<p class="text">
			{foreach from=$msg_array item=msg}
			<span class="text_blue text_wb">{$msg}</span><br>
			{/foreach}
		</p>

		<!-- 登録情報入力 -->
		<div class="task_input_form">

			<table>
			<tr align="center">
				<th colspan="2"></th>
				{foreach from=$group_array item=group_info}
				<th>{$group_info.GROUP_NAME}</th>
				{/foreach}
			</tr>

			{foreach from=$doctype_array item=doctype_info}
			<tr align="center">
				<th colspan="2" align="left">{$doctype_info.type_nm}</th>

				{foreach from=$group_array item=group_info}
				{assign var="authority" value="doctype_id:`$doctype_info.id`,group_lvl:`$group_info.GROUP_LVL`"}
				<td><input type="checkbox" name="auth_check[]" value="doctype_id:{$doctype_info.id},group_lvl:{$group_info.GROUP_LVL}"
				{if in_array($authority, $check_list)} checked{/if}{if $mng != 1} disabled="disabled"{/if}
				></input></td>
				{/foreach}

			</tr>
			{/foreach}

