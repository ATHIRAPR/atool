<head>
<!-- Meta -->
{include file="page_meta.tpl.html"}
<!-- /Meta -->
<link rel="stylesheet" type="text/css" href="css/default.css" media="screen,print" />
<title>文書ファイル管理ツール</title>

<script src="js/jquery-1.7.1.min.js" type="text/javascript"></script>
<script src="js/jquery.tablesorter.js" type="text/javascript"></script>
<!-- <script src="js/jquery.tablesorter.min.js" type="text/javascript"></script>-->
<script src="js/jquery.tablesorter.pager.js" type="text/javascript"></script>
<script type="text/javascript" src="js/product_table_sorter.js"></script>

<script language="javascript">

	function set_selected_value(product_nm, model_nm) {
		var form = document.select_product_form;
		form.product_nm.value = product_nm;
		form.model_nm.value = model_nm;
	}

	function send_selected_value() {
		// 親ウインドウを取得するIE用
		if(!window.opener) {
			window.opener = dialogArguments;
		}

		if (window.opener != null) {
			var form = document.select_product_form;
			//var parent_form = window.opener.document.add_file_form;
			var parent_form = window.opener.document.forms[0];

			parent_form.product_nm.value = form.product_nm.value;
			parent_form.model_nm.value = decodeURIComponent(form.model_nm.value);

			window.close();
			//window.opener.focus();
			parent_form.product_nm.focus();
		}
	}
</script>

</head>

<body>

<div id="skip_link_block">
	<ul>
		<li><a href="#main_content_anc">本文へジャンプします</a></li>

	</ul>
	<p id="pageTop">ページの先頭です</p>
</div>

<div id="contents">

<!-- Header Area -->
{include file="page_header.tpl.html"}
<!-- /Header Area -->

<!-- Contents Area -->
<div id="contents_body" class="clearfix">

	<!-- Main Contents Area -->
	<div id="main_content_area">

		<div id="skip_main_block">
			<p id="main_content_anc"><a name="main_content_anc">本文の始まりです</a></p>
		</div>

		<h2><em>タイトルの検索</em></h2>

		<p class="text">
		検索対象：{if $product_nm }タイトル "{$product_nm|escape}"{else}全て{/if}
		</p>

		{if !$list}
		<p class="text">該当するタイトルは登録されていません。</p>

		{else}

		<!-- 検索条件入力 -->
		<!--
		<div class="task_select">
			<form name="search_product_form" method="get">
			<table>
				<tr>
					<td><div>タイトル</div></td>
					<td colspan="3">
						<input type="text" name="product_nm" id="product_nm" style="width:560px;"  value="{$product_nm|escape}" maxlength="500" />
					</td>
				</tr>
				<tr>
					<td colspan="2"></td>
					<td>&nbsp;</td>
					<td align="right">

					<input type="submit" src="image/btn_list.jpg" name="button" id="button" value="一覧表示"" onclick="javascript:window.location.href='manage_product.php'; return false;" />

					<img src="image/btn_list.jpg"  onclick="javascript:window.location.href='manage_product.php'; return false;">
					<input type="image" alt="条件クリア(画像無し)" src="image/btn_clear.jpg" onclick="javascript:window.location.href='manage_product.php'; return false;" />
					</td>
				</tr>
			</table>
			</form>
		</div>
		-->

		<!-- ページ送り  -->
		{include file='table_pager.tpl.html'}
		<!-- /ページ送り  -->

		<table id="product_table_sorter" class="tablesorter">
			<thead>
				<tr>
					<th class="bg_col_gr" width="20">&nbsp;</th>
					<th class="bg_col_gr">タイトル</th>
					<th class="bg_col_gr">型番</th>
				</tr>
			</thead>

			<tbody>
		      {foreach from=$list item=data}
			    <tr>
			    <label>
			    <td class="center">
				    <!--<input type="radio" name="product_id" value="{$data.product_id}" onclick="javascript:set_selected_value('{$data.product_nm|escape}', '{$data.model_nm|escape}');"> -->
				    <input type="radio" name="product_id" value="{$data.product_id}" onclick="javascript:set_selected_value('{$data.product_nm|escape}', '{$data.model_nm|escape|rawurlencode}');">
			    </td>
			    <td>{$data.product_nm|escape}</td>
			    <td>{$data.model_nm|escape|replace:"\n":'<br>'}</td>
			    </label>
			    </tr>

			  {foreachelse}

		      {/foreach}

			</tbody>
		</table>

		{/if}

		<form name="select_product_form" method="post">
		<p class="center">

		{if $list}
		<input type="image" alt="選択する" src="image/btn_select.jpg" onclick="javascript:send_selected_value(); return false;">
		{/if}

		<input type="image" alt="キャンセル" src="image/btn_cancel.jpg" onclick="window.close(); return false;">
		</p>

		<input type="hidden" name="product_nm"></input>
		<input type="hidden" name="model_nm"></input>
		</form>

	</div>
	<!-- /Main Contents Area -->

</div>
<!-- Contents Area -->

<!-- Footer Area -->
{include file="page_footer.tpl.html"}
